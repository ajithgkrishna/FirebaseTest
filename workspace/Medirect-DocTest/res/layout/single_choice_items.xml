<?xml version="1.0" encoding="utf-8"?>
<com.mobtecnica.medirect.docter.customviews.CheckableRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
		 <com.pkmmte.circularimageview.CircularImageView
            android:id="@+id/pic"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/img"
            app:border="true"
            app:border_color="#FFFFFFFF"
            app:border_width="1dp"
            app:selector="true"
            app:selector_color="#4403a9f4"
            app:selector_stroke_color="#aa5677fc"
            app:selector_stroke_width="4dp"
            app:shadow="true" />
        <TextView
            android:id="@+id/textViewPatientName"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical" 
            android:focusable="false" />

        <TextView
            android:id="@+id/textViewaccountNumId"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:focusable="false"
            android:gravity="center_vertical" />

        <!-- <com.mobtecnica.medirect.docter.customviews.InertCheckBox
            android:id="@+id/CheckBoxChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="25dip"
            android:button="@drawable/single_radio_choice"
            android:focusable="false" /> -->
    </LinearLayout>

</com.mobtecnica.medirect.docter.customviews.CheckableRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <gradient android:angle="-90" android:endColor="@color/new_patient_click" android:startColor="@color/new_patient_click" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <solid android:color="@color/new_patient_click" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <gradient android:angle="-90" android:endColor="@color/new_patient" android:startColor="@color/new_patient" />
        </shape></item>

</selector>